<!doctype html>
<html>
<head>
<title>sign in</title>
<style>
  body{
    background: url('/images/img/QQ图片20201019155823.jpg') no-repeat;
    background-size: 100%;
  }
div{
    margin: 0 auto;
    background:yellow;
    text-align: center;
    font-size:24px;
    padding:5px;
    color:white;
}
form{
    /* background: #F8F8FF ; */
    border:#000000 solid 1px;
    color:#575454;  
    width:400px;
    margin:200px auto;
    font-size:15px;
}
table{
    margin:10px auto;
}
a{
    text-decoration:none;
}
input[type="button"]{
    background:#228B22;
    color:white;
    font-size:15px;
    font-weight:bold;
    width:120px;
    height:40px;
}
td:first-child{
    text-align:right;
    padding:0 5px;
}
td:only-child{
    text-align:center;
    font-size:12px;
}
span:before{
    content:"* ";
    color:red;
}
input[type="text"]:read-only{
    border:#888484 solid 2px;
    background:#888484;
    font-weight:bold;   
}
input[type="text"]:hover{
    background:#EFD9AC;
}
button{
  margin: 20px 20px;
}
</style>
</head>
<body>
<form action="/register/in" method="post">
<div>注册账号</div>
<table>
    <tr><td>
      <span>用户名</span></td><td><input type="text" name="username" id="username" />
    </td></tr>
    <tr><td>
      <span>密码</span></td><td><input type="password" name="password" id="password" />   
      <button type="submit">点击注册</button>
    </td></tr>
    
</table>
</form>
</body>
</html>